#include <stdio.h>
 
int main() {
 
    int x=0, y=0, i=0, aux=0;
    scanf("%d", &x);
    scanf("%d", &y);
    if(x>y){
        aux=x;
        x=y;
        y=aux;
    }
    aux=0;
    for(i=x+1; i<y; i++){
        if(i%2!=0){
            aux=aux+i;
        }
    }
    printf("%d\n", aux);
    return 0;
}
