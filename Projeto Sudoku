#include <stdio.h>
#include <ctype.h>


int main(void) {
  char start='\0';
  printf("**************SUDOKU**************\nPressione ENTER para iniciar.\n");
  start=getchar();
  //****************************************************
  if(start=='\n'){//INICIALIZAÇÃO DO SUDOKU
    printf("Para ganhar você precisa colocar números de 1 a 9 em cada linha, coluna e quadrado, sem repetí-los nestas 3 condições.\nO número 0 representa lugares ainda não preenchidos.\nPara selecionar um lugar, coloque o número da LINHA e da COLUNA no seguinte formato: \"L C\"\n\n");
    //****************************************************
    int sudoku[9][9];
    int l=0, c=0;
    //****************************************************
    for(l=0; l<9; l++){
      if(l==0||l==3||l==6){
        if(l==0){
          printf("  C 0 1 2   3 4 5   6 7 8 C \n");
          printf("L   - - -   - - -   - - -   L\n");
        }else{
        printf("    - - -   - - -   - - -   \n");
        }
      }
      for(c=0; c<9; c++){
        sudoku[l][c]=0;
        if(c==0||c==3||c==6){
          if(c==0){printf("%d", l);
          }
          printf(" |");
        }
        printf(" %d", sudoku[l][c]);
        if(c==8){printf(" | %d\n", l);
        }
      }
      if(l==8){
        printf("L   - - -   - - -   - - -   L\n");
        printf("  C 0 1 2   3 4 5   6 7 8 C \n");
      }
    }

  }

  return 0;
}
